@model IEnumerable<FamousPeople.Models.Person>


@if (User.IsInRole(UserRoles.Admin))
{
    <p>
        <a asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus"></i>Добавить</a>
    </p>
}
<div class="row">
    <div class="col-sm-8">
        @if (Model.Count() > 0)
        {
            <div class="container">
                <div class="panel-group m-4">
                    @foreach (var person in Model)
                    {
                        @if (@person.IsApproved == false)
                        {
                            continue;
                        }

                        <section class="features1 cid-raMGzBDSdH" id="features1-3">
                            <div class="container">
                                <div class="row justify-content-center align-items-center">

                                    <div class="col-sm-12 text-block col-md-6">
                                        <h3 class="mbr-section-title mbr-fonts-style align-right display-2"><a asp-action="Details" asp-route-id="@person.Id"><strong>@Html.DisplayFor(h => person.FullName)</strong></a></h3>
                                        <div class="mbr-section-text mbr-fonts-style align-right display-7">
                                            @Html.DisplayFor(h => person.Bio)
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 align-center">
                                        <div class="mbr-figure">
                                            <img src="\images\@person.ProfilePictureURL" class="img-fluid" alt="" title="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    }
                </div>
            </div>
        }
        else
        {
            <h3>Ничего не найдено :(</h3>
        }
    </div>
    <div class="sidebar col-sm-4">
    </div>
</div>

