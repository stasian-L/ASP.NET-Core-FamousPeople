@model IEnumerable<FamousPeople.Models.Person>


@if (User.IsInRole(UserRoles.Admin))
{
    <p>
        <a asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus"></i>Добавить</a>
    </p>
}
@if (Model.Count() > 0)
{
    <div class="col-sm-12">
        <h2> Список известных белорусов</h2>

        <div class="container z-depth-1 my-5">

            <!-- Section -->
            <section>
                <hr class="w-header my-4">

                <div class="row d-flex justify-content-center">

                    @foreach (var person in @Model)
                    {
                        <div class="col-md-6 col-xl-4">
                            <img src="\images\@person.ProfilePictureURL" class="img-fluid mb-5" alt="" title="" />

                        </div>

                        <div class="col-md-6">
                            <h5 class="font-weight-normal"><a class="dark-grey-text" asp-controller="Person" asp-action="Details" asp-route-id="@person.Id">@person.FullName</a></h5>

                            <p class="text-muted mb-5 pb-2">
                                @person.Bio
                            </p>
                        </div>
                    }
                </div>

            </section>
            <!-- Section -->

        </div>
    </div>
    }
    else
    {
        <p>Пусто :(</p>
    }
    
